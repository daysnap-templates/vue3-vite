{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": ["typings/**/*.ts", "src/**/*", "src/**/*.vue"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "types": [
      "node",
      "unplugin-vue-define-options/macros-global"
    ],
    "ignoreDeprecations": "5.0",
    "lib": [
      "ESNext",
      "DOM",
      "DOM.Iterable"
    ],
  },

  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
